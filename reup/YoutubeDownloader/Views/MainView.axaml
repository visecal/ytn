<Window
    x:Class="YoutubeDownloader.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:materialStyles="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
    xmlns:viewModels="clr-namespace:YoutubeDownloader.ViewModels"
    xmlns:components="clr-namespace:YoutubeDownloader.Views.Components"
    Title="{Binding Title}"
    Width="1100"
    Height="750"
    MinWidth="900"
    MinHeight="600"
    x:DataType="viewModels:MainViewModel"
    Icon="/favicon.ico"
    RenderOptions.BitmapInterpolationMode="HighQuality"
    WindowStartupLocation="CenterScreen">

    <dialogHostAvalonia:DialogHost
        x:Name="DialogHost"
        CloseOnClickAway="False"
        DisableOpeningAnimation="True"
        Loaded="DialogHost_OnLoaded">
        <materialStyles:SnackbarHost HostName="Root" SnackbarMaxCounts="3">
            <Grid RowDefinitions="Auto,*">
                <!-- Top Header Bar -->
                <Border
                    Grid.Row="0"
                    Background="{DynamicResource MaterialDarkBackgroundBrush}"
                    Padding="16,12">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Logo and Title -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <materialIcons:MaterialIcon
                                Width="32"
                                Height="32"
                                Foreground="{DynamicResource MaterialSecondaryMidBrush}"
                                Kind="Youtube" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="{DynamicResource MaterialDarkForegroundBrush}"
                                Text="YouTube Reup Tool" />
                        </StackPanel>

                        <!-- Tab Navigation -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal" Spacing="4">
                            <RadioButton
                                x:Name="DownloadTab"
                                Padding="16,8"
                                Classes="tabButton"
                                Content="Download"
                                GroupName="MainTabs"
                                IsChecked="True">
                                <RadioButton.Styles>
                                    <Style Selector="RadioButton.tabButton">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDarkForegroundBrush}" />
                                        <Setter Property="FontSize" Value="14" />
                                        <Setter Property="CornerRadius" Value="4" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Template">
                                            <ControlTemplate>
                                                <Border
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="{TemplateBinding CornerRadius}">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Content="{TemplateBinding Content}" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter>
                                        <Style Selector="^:pointerover">
                                            <Setter Property="Background" Value="#30FFFFFF" />
                                        </Style>
                                        <Style Selector="^:checked">
                                            <Setter Property="Background" Value="{DynamicResource MaterialSecondaryMidBrush}" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                        </Style>
                                    </Style>
                                </RadioButton.Styles>
                            </RadioButton>
                            <RadioButton
                                x:Name="EncodeTab"
                                Padding="16,8"
                                Classes="tabButton"
                                Content="Encode"
                                GroupName="MainTabs" />
                            <RadioButton
                                x:Name="UploadTab"
                                Padding="16,8"
                                Classes="tabButton"
                                Content="Upload"
                                GroupName="MainTabs" />
                            <RadioButton
                                x:Name="ReupTab"
                                Padding="16,8"
                                Classes="tabButton"
                                Content="Reup Workflow"
                                GroupName="MainTabs" />
                        </StackPanel>

                        <!-- Right Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                            <Button
                                Padding="8"
                                Command="{Binding Dashboard.ShowAuthSetupCommand}"
                                Foreground="{DynamicResource MaterialDarkForegroundBrush}"
                                IsVisible="{OnPlatform False, Windows=True}"
                                Theme="{DynamicResource MaterialFlatButton}"
                                ToolTip.Tip="YouTube Authentication">
                                <materialIcons:MaterialIcon
                                    Width="24"
                                    Height="24"
                                    Kind="AccountKey" />
                            </Button>
                            <Button
                                Padding="8"
                                Command="{Binding Dashboard.ShowSettingsCommand}"
                                Foreground="{DynamicResource MaterialDarkForegroundBrush}"
                                Theme="{DynamicResource MaterialFlatButton}"
                                ToolTip.Tip="Settings">
                                <materialIcons:MaterialIcon
                                    Width="24"
                                    Height="24"
                                    Kind="Settings" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Grid Grid.Row="1">
                    <!-- Download Tab Content -->
                    <ContentControl
                        Content="{Binding Dashboard}"
                        IsVisible="{Binding #DownloadTab.IsChecked}" />

                    <!-- Encode Tab Content -->
                    <components:EncodeView
                        IsVisible="{Binding #EncodeTab.IsChecked}"
                        DataContext="{Binding EncodeViewModel}" />

                    <!-- Upload Tab Content -->
                    <components:UploadView
                        IsVisible="{Binding #UploadTab.IsChecked}"
                        DataContext="{Binding UploadViewModel}" />

                    <!-- Reup Workflow Tab Content -->
                    <components:ReupWorkflowView
                        IsVisible="{Binding #ReupTab.IsChecked}"
                        DataContext="{Binding ReupViewModel}" />
                </Grid>
            </Grid>
        </materialStyles:SnackbarHost>
    </dialogHostAvalonia:DialogHost>
</Window>
